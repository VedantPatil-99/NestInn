<!-- Button trigger modal -->
<button
	type="button"
	class="btn btn-dark btn-sm mb-1"
	data-bs-toggle="modal"
	data-bs-target="#imagePreviewModal"
>
	Show Old Image
</button>

<!-- Modal -->
<div class="toggle-show">
	<div
		class="modal fade"
		id="imagePreviewModal"
		tabindex="-1"
		aria-labelledby="imagePreviewModalLabel"
		aria-hidden="true"
	>
		<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
			<div class="modal-content">
				<div class="modal-header">
					<h3 class="modal-title fs-5" id="imagePreviewModalLabel">
						<%= hostel.title %>
					</h3>
					<button
						type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Close"
					></button>
				</div>
				<div class="modal-body">
					<!-- Image Upload -->
					<div class="mb-3">
						<h4 class="mb-4">Current Images:</h4>
						<div class="d-flex flex-wrap gap-4">
							<% hostel.images.forEach((img, idx) => { %>
							<div class="position-relative">
								<label for="img-<%= idx %>" class="form-label"
									><img src="<%= img.url %>" class="w-100 me-4" />
								</label>
								<input
									type="checkbox"
									name="deleteImages[]"
									id="img-<%= idx %>"
									value="<%= img.filename %>"
								/>
								<label for="img-<%= idx %>">Remove</label>
							</div>
							<% }); %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
