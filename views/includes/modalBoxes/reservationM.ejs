<!-- Modal for Reservation -->
<div
	class="modal fade"
	id="reservationModal"
	tabindex="-1"
	aria-labelledby="reservationModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="reservationModalLabel">
					Complete Your Reservation
				</h5>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<form action="/reservations/<%= hostel._id %>" method="POST">
				<div class="modal-body">
					<!-- Add Room Type & Duration -->
					<div class="mb-3">
						<label for="roomType" class="form-label">Room Type</label>
						<select class="form-select" id="roomType" name="roomType" required>
							<option value="Single">Single</option>
							<option value="Double">Double</option>
							<option value="Shared">Shared</option>
						</select>
					</div>
					<div class="mb-3">
						<label for="duration" class="form-label">Booking Duration</label>
						<select class="form-select" id="duration" name="duration" required>
							<option value="6">6 months</option>
							<option value="9">9 months</option>
							<option value="12">12 months</option>
						</select>
					</div>

					<!-- Student Count -->
					<div class="mb-3">
						<label for="students" class="form-label">Number of Students</label>
						<input
							type="number"
							id="students"
							name="students"
							class="form-control"
							value="1"
							required
							min="1"
						/>
					</div>

					<!-- Add Meal Plan -->
					<div class="mb-3 form-check">
						<input
							type="checkbox"
							id="mealPlan"
							name="mealPlan"
							class="form-check-input"
						/>
						<label class="form-check-label" for="mealPlan">Add Meal Plan</label>
					</div>

					<!-- Price Breakdown -->
					<div id="priceDetails">
						<p><strong>Price Breakdown:</strong></p>
						<p id="priceDetailsText"></p>
					</div>
				</div>
				<div class="modal-footer">
					<button
						type="button"
						class="btn btn-secondary"
						data-bs-dismiss="modal"
					>
						Close
					</button>
					<button type="submit" class="btn btn-primary">
						Confirm Reservation
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
