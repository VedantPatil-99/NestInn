<!-- ForWhom Modal -->
<div
	class="modal fade"
	id="searchForWhomModal"
	tabindex="-1"
	aria-labelledby="forWhomLabel"
	aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<form id="forWhomForm">
				<div class="modal-header">
					<h5 class="modal-title" id="forWhomLabel">
						Select Who the Hostel is For
					</h5>
					<button
						type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<select class="form-select" id="forWhomSelect">
						<option value="">All</option>
						<option value="Boys">Boys</option>
						<option value="Girls">Girls</option>
						<option value="Parents with Students">Parents with Students</option>
						<option value="Co-ed">Co-ed</option>
					</select>
				</div>
				<div class="modal-footer">
					<button
						type="button"
						class="btn btn-outline-secondary"
						id="clearForWhom">
						Clear
					</button>
					<button type="submit" class="btn btn-success">Apply</button>
				</div>
			</form>
		</div>
	</div>
</div>
