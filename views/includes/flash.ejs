<!-- Bootstrap Toasts for Flash Messages -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
	<% if (success && success.length) { %>
	<div
		class="toast align-items-center text-bg-success border-0"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
		id="successToast"
		data-bs-delay="2500"
	>
		<div class="toast-header">
			<img
				src="../icons/Airbnb_icon.png"
				class="rounded me-2"
				alt="logo"
				style="height: 1.5rem; width: 1.5rem"
			/>
			<strong class="me-auto">Airbnb</strong>
			<small>just now</small>
			<button
				type="button"
				class="btn-close"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
		<div class="toast-body"><%= success %></div>
	</div>
	<% } %> <% if (error && error.length) { %>
	<div
		class="toast align-items-center text-bg-danger border-0"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
		id="errorToast"
		data-bs-delay="3000"
	>
		<div class="toast-header">
			<img
				src="../icons/Airbnb_icon.png"
				class="rounded me-2"
				alt="logo"
				style="height: 1.5rem; width: 1.5rem"
			/>
			<strong class="me-auto">Airbnb</strong>
			<small>just now</small>
			<button
				type="button"
				class="btn-close"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
		<div class="toast-body"><%= error %></div>
	</div>
	<% } %>
</div>

<!-- JavaScript to Auto Show Toasts -->
<script src="../js/flashToast.js"></script>
