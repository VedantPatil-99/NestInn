<div class="container my-5">
	<h2>Edit Reservation for <%= reservation.hostel.name %></h2>

	<form
		action="/reservations/<%= reservation._id %>?_method=PUT"
		method="POST"
		class="mt-4"
	>
		<div class="mb-3">
			<label for="students" class="form-label">Number of Students</label>
			<input
				type="number"
				name="students"
				id="students"
				min="1"
				value="<%= reservation.students %>"
				class="form-control"
				required
			/>
		</div>

		<div class="mb-3">
			<label for="durationMonths" class="form-label"
				>Duration (in months)</label
			>
			<input
				type="number"
				name="durationMonths"
				id="durationMonths"
				min="6"
				max="12"
				placeholder="6-12 months"
				step="3"
				value="<%= reservation.durationMonths %>"
				class="form-control"
				required
			/>
		</div>

		<!-- <div class="mb-3 form-check">
