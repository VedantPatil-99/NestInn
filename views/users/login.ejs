<% layout("/layouts/boilerplate") %>

<!-- Spacing -->
<div class="my-5"></div>

<!-- Centered Login Form -->
<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-4 col-md-6 col-sm-8">
			<h4 class="mb-4 text-center">Log in</h4>

			<form
				action="/login"
				method="POST"
				class="needs-validation p-4 shadow rounded bg-light"
				novalidate
			>
				<!-- Username -->
				<div class="mb-3">
					<label for="username" class="form-label">Username:</label>
					<div class="input-group">
						<span class="input-group-text"><i class="fas fa-user"></i></span>
						<input
							type="text"
							name="username"
							id="username"
							class="form-control"
							autocomplete="off"
							required
						/>
						<div class="valid-feedback">Looks good!</div>
					</div>
				</div>

				<!-- Password -->
				<div class="mb-1">
					<label for="password" class="form-label">Password:</label>
					<div class="input-group">
						<span class="input-group-text"><i class="fas fa-lock"></i></span>
						<input
							type="password"
							name="password"
							id="password"
							class="form-control"
							required
						/>
						<span class="input-group-text">
							<i
								class="fas fa-eye"
								id="togglePassword"
								style="cursor: pointer"
							></i>
						</span>
					</div>
				</div>

				<!-- Forgot Password Link -->
				<div class="text-end mb-3">
					<a href="/forgot-password" class="text-decoration-none"
						>Forgot Password?</a
					>
				</div>

				<!-- Login Button -->
				<div class="d-grid">
					<button type="submit" class="btn btn-success">Login</button>
				</div>

				<!-- Social Login -->
				<div class="text-center mt-3">
					<p>or log in with</p>
					<a href="/auth/google" class="btn btn-outline-danger me-2">
						<i class="fab fa-google"></i> Google
					</a>
					<a href="/auth/facebook" class="btn btn-outline-primary">
						<i class="fab fa-facebook"></i> Facebook
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Toggle Password Visibility Script -->
<script src="/js/passVisibility.js"></script>
